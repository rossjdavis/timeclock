<% @site.errors.full_messages.each do |message| %>
  <p class="alert"><%= message %></p>
<% end %>

<%= form_for @site do |f| %>
<table>
  <tr>
    <th><%= f.label :name %></th>
    <th><%= f.label :address %></th>
  </tr>

  <tr>
    <td><%= f.text_field :name %></td>
    <td><%= f.text_field :address %></td>
  </tr>
</table>

  <%= f.submit %>
<% end %>
