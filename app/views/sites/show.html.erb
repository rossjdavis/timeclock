<%= current_user.username %>


<% if current_user.clocked_in? %>
  <%= link_to "Clock Out", clock_out_site_path(@site), method: :put %>
<% else %>
  <% if !current_user.logs.exists?(:date => Date.today) %>
    <%= link_to "Clock In", clock_in_site_path(@site), method: :post %>
  <% end %>
<% end %>
